case_name = simple lattice
neutronics_solver = "mcnp"
neutronics_exec = mcnp.EXE
num_threads = 8
neutronics_input_file = test.inp
neutronics_library_file = ./xsdir
depletion_solver = cram16
depletion_library_file = ./test.h5
depletion_library_name = test
depletion_substeps = 14
output_hdf5 = results.h5

[control_groups]
    [[bank_1]]
        type = surface
        set = 1
        axis = z

[tallies]
    [[range]]
        tally_id_start = 1
        tally_id_end = 100
        type = universe
    [[item]]
        tally_id = 4
        type = unprocessed

[operations]
    [[state 1]]
        [[[transform_1]]]
           set = 7
           type = universe
           pitch=-90
           angle_units = degrees
        [[[write_input_1]]]
            filename = "state1.inp"
        [[[transform_2]]]
           set = 7
           type = universe
           roll=180
           angle_units = degrees
           reset = False
        [[[write_input_2]]]
            filename = "state2.inp"
        [[[transform_3]]]
           set = 7
           type = universe
           matrix = 0.,  1.,  0., 0.,  0.,  1., 1.,  0.,  0.
           angle_units = degrees
           matrix_notation=mcnp
        [[[write_input_3]]]
            filename = "state3.inp"
        [[[transform_4]]]
           set = 7
           type = universe
           matrix = 0.,  1.,  0.,  0.,  0.,  -1.,  -1.,  0.,  0.
           angle_units = degrees
           matrix_notation=common
           reset = True
        [[[write_input_4]]]
            filename = "state4.inp"
        [[[transform_5]]]
           set = 8
           type = universe
           yaw = 37
           pitch = -11
           roll = 254
           angle_units = degrees
        [[[write_input_5]]]
            filename = "state5.inp"
        [[[transform_6]]]
            group_name = bank_1
            value = 1.32
        [[[write_input_6]]]
            filename = "state6.inp"
        [[[transform_7]]]
            group_name = bank_1
            value = 2.07
            reset = False
        [[[write_input_7]]]
            filename = "state7.inp"
        [[[transform_8]]]
            group_name = bank_1
            value = 3.44 
            reset = True
        [[[write_input_8]]]
            filename = "state8.inp"
