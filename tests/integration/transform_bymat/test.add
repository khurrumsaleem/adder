case_name = 2x2x2 small case
neutronics_solver = "MCNP"
neutronics_exec = mcnp.EXE
num_threads = 8
neutronics_input_file = test.inp
neutronics_library_file = ./xsdir
depletion_solver = ORIGEN2.2
depletion_exec = origen2.EXE
depletion_library_file = test.h5
depletion_library_name = test
depletion_substeps = 14
output_hdf5 = results.h5

[tallies]
    [[item_detect]]
        tally_id = 4
        type = material

[operations]
    [[state 1]]
        [[[transform_1]]]
           set = 11
           type = cell
           pitch=-90
           angle_units = degrees
        [[[write_input_1]]]
            filename = "state1.inp"
        [[[transform_2]]]
           set = 11
           type = cell
           roll=180
           angle_units = degrees
           reset = False
        [[[write_input_2]]]
            filename = "state2.inp"
        [[[transform_3]]]
           set = 11
           type = cell
           matrix = 0.,  1.,  0., 0.,  0.,  1., 1.,  0.,  0.
           angle_units = degrees
           matrix_notation=mcnp
        [[[write_input_3]]]
            filename = "state3.inp"
        [[[transform_4]]]
           set = 11
           type = cell
           matrix = 0.,  1.,  0.,  0.,  0.,  -1.,  -1.,  0.,  0.
           angle_units = degrees
           matrix_notation=common
           reset = True
        [[[write_input_4]]]
            filename = "state4.inp"
        [[[transform_5]]]
           set = 12
           type = cell
           yaw = 37
           pitch = -11
           roll = 254
           angle_units = degrees
        [[[write_input_5]]]
            filename = "state5.inp"
        [[[transform_6]]]
            set = 31
            type = surface
            yaw = 16
            angle_units = degrees
            displacement = 0., 0., 1.32
        [[[write_input_6]]]
            filename = "state6.inp"
        [[[transform_7]]]
            set = 31
            type = surface
            displacement = 1.3, 1.7, 2.07
            reset = False
        [[[write_input_7]]]
            filename = "state7.inp"
        [[[transform_8]]]
            set = 31
            type = surface 
            displacement = 0., 0., 3.44 
            reset = True
        [[[write_input_8]]]
            filename = "state8.inp"
