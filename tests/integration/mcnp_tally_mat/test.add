case_name = ADDER-Training_Exercise-1
neutronics_solver = "mcnp"
neutronics_exec = mcnp.EXE
use_depletion_library_xs = False
neutronics_input_file = test.inp
neutronics_library_file = ./xsdir
depletion_chunksize = 100
depletion_substeps = 1
depletion_solver = cram16
depletion_method = "predictor"
depletion_library_file = test.h5
depletion_library_name = test
output_hdf5 = results.h5

[materials]
    [[metadata]]
        [[[range_fuel]]]
            neutronics_id_start = 1
            neutronics_id_end =100
            volume = 1.570796
            density = 7.419604E-02
            name = "fuel"
        [[[item_water]]]
            neutronics_id = 2
    	    depleting = False
            name = "water"
        [[[item_control]]]
            neutronics_id = 3
            non_depleting_isotopes = Al27
            name = "control_rod"
    [[aliases]]
        [[[P1]]]
            name = P1
            set = 11, 12, 13, 14, 15
        [[[P2]]]
            name = P2
            set = 21, 22, 23, 24, 25
        [[[P3]]]
            name = P3
            set = 31, 32, 33, 34, 35
        [[[P4]]]
            name = P4
            set = 41, 42, 43, 44, 45
        [[[PS]]]
            name = PS
            set = 51, 52, 53, 54, 55
        [[[PS2]]]
            name = PS2
            set = 61, 62, 63, 64, 65
[control_groups]
    [[control_rod]]
        set = 41, 42
        type = surface
        axis = z
[tallies]
    [[list]]
        tally_ids = 4, 14, 24, 54, 64, 6, 7
        type = material

[operations]
    [[state 1]]
        label = "1st step- depletion"
        [[[deplete]]]
            powers = 1
            durations = 1
            execute_endpoint = False
            include_user_tallies = True
        [[[deplete_notallies]]]
            powers = 1
            durations = 1
            execute_endpoint = False
            include_user_tallies = False
    [[state 2]]
        label = "2nd step - shuffling P2 to P1"
        [[[shuffle]]]
            type = material
            moves = P2, P1
        [[[write_input]]]
             filename = 2nd_step_shuffling_p2p1.inp
             include_user_tallies = True
    [[state 3]]
        label = "3rd step - shuffling PS (supply/out core) to P1"
        [[[shuffle]]]
            type = material
            moves = PS, P1
        [[[deplete]]]
            powers = 1
            durations = 1
            execute_endpoint = False
            include_user_tallies = True
    [[state 4]]
        label = "4th step - shuffling P1 (out core) to P2"
        [[[shuffle]]]
            type = material
            moves = P1, P2
        [[[write_input]]]
             filename = 4th_step_shuffling_p1_p2.inp
        [[[deplete]]]
            powers = 1
            durations = 1
            execute_endpoint = False
            include_user_tallies = True
    [[state 5]]
        label = "5th step - shuffling PS (supply/out core) to P4"
        [[[shuffle]]]
            type = material
            moves = PS, P4
        [[[write_input]]]
             filename = 5th_step_shuffling_ps2nd_p4.inp
    [[state 6]]
        label = "6th step - shuffling PS2 (out core) to P1"
        [[[shuffle]]]
            type = material
            moves = PS2, P1
        [[[write_input]]]
             filename = 6th_step_shuffling_ps2_p4.inp