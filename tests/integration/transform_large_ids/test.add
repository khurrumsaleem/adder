case_name = simple lattice
neutronics_solver = "mcnp"
neutronics_exec = mcnp.EXE
num_threads = 8
neutronics_input_file = test.inp
neutronics_library_file = ./xsdir
depletion_solver = cram16
depletion_library_file = ./test.h5
depletion_library_name = test
depletion_substeps = 14
output_hdf5 = results.h5

[materials]
    [[metadata]]
        [[[list_fuel]]]
            neutronics_ids = 11, 12, 13, 14
            volume = 1.0
            density = 1.0
            name = "fuel"
        [[[item_water]]]
            neutronics_id = 99
    	    depleting = False
            name = "water"

[operations]
    [[state 1]]
		[[[shuffle]]]
			type = universe
            moves = 5, 2, 4
        [[[transform_1]]]
            type = universe
            set = 2
            yaw = 21
        [[[transform_2]]]
            type = universe
            set = 1
            yaw = 33
        [[[transform_3]]]
            type = universe
            set = 3
            yaw = 12
        [[[write_input]]]
            filename = "state1.inp"
    [[state 2]]
        [[[transform_2]]]
            type = universe
            set = 5[1]
            yaw = 45
        [[[shuffle]]]
            type = universe
            moves = 5, 2, 5[1]
        [[[transform_1]]]
            type = universe
            set = 3 
            yaw = 60
            reset = True
        [[[write_input]]]
            filename = "state2.inp"
    [[state 3]]
        [[[revolve]]]
            type = universe
            set = 1, 2, 5[2], 3
            shape = 1, 2, 2
            xy_degrees = 90
            z_flip = False
        [[[write_input]]]
            filename = "state3.inp"
    [[state 4]]
        [[[shuffle]]]
            type = universe
            moves = 5[1], 3
        [[[transform_surf_bottom]]]
            type = surface
            set = 301
            displacement = 0.0, 0.0, -1.0
        [[[transform_surf_top]]]
            type = surface
            set = 302
            displacement = 0.0, 0.0, 1.0
        [[[write_input_surfaces]]]
            filename = "state4.inp"
